type User  {
  id:           ID!
  name:         String!
  age:          Int!
  emailAddress: String!
  grade:        Grade!
}

type Grade {
  id:      ID!
  name:    String!
}

type Query {
  users: [User!]!
}

input NewUser {
  name:         String!
  age:          Int!
  emailAddress: String!
  gradeId:      String!
}

type Mutation {
  createUser(input: NewUser!): User!
}